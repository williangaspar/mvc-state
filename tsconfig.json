{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"],
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
        "importHelpers": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*",
        "index.ts"
    ],
    "exclude" : ["spec", "node_modules", "build", "dist",  "src/**/*Spec.ts"]
}
